<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="800.0" prefWidth="1200.0" style="-fx-background-color: #1e1e2e;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.buet.edutrack.controllers.TakeExamController">

    <!-- Top Bar with Timer -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: #0f3460; -fx-padding: 20 30;">
            <Label fx:id="examTitleLabel" style="-fx-font-size: 24px; -fx-text-fill: #f8ffbd; -fx-font-weight: bold;" text="Exam Title" />
            <Region HBox.hgrow="ALWAYS" />

            <!-- Timer -->
            <VBox alignment="CENTER">
                <Label style="-fx-text-fill: #b0b0b0; -fx-font-size: 12px;" text="Time Remaining" />
                <Label fx:id="timerLabel" style="-fx-font-size: 28px; -fx-text-fill: #00ff00; -fx-font-weight: bold;" text="60:00" />
            </VBox>
        </HBox>
    </top>

    <center>
        <HBox style="-fx-background-color: #1e1e2e;">

            <!-- Left: Question Navigation -->
            <VBox spacing="15" style="-fx-background-color: #16213e; -fx-min-width: 250;">
                <padding>
                    <Insets bottom="20" left="20" right="20" top="20" />
                </padding>

                <Label style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" text="Question Navigator" />

                <Separator style="-fx-background-color: #363648;" />

                <Label fx:id="progressLabel" style="-fx-text-fill: #b0b0b0; -fx-font-size: 13px;" text="Answered: 0 / 10" />

                <ScrollPane fitToWidth="true" style="-fx-background: transparent; -fx-background-color: transparent;" VBox.vgrow="ALWAYS">
                    <GridPane fx:id="questionNavGrid" hgap="10" vgap="10" />
                </ScrollPane>

                <Separator style="-fx-background-color: #363648;" />

                <VBox spacing="10">
                    <HBox alignment="CENTER_LEFT" spacing="8">
                        <Label style="-fx-background-color: #6c63ff; -fx-text-fill: white; -fx-pref-width: 30; -fx-pref-height: 30; -fx-alignment: center; -fx-background-radius: 5;" text="1" />
                        <Label style="-fx-text-fill: #b0b0b0; -fx-font-size: 12px;" text="Answered" />
                    </HBox>
                    <HBox alignment="CENTER_LEFT" spacing="8">
                        <Label style="-fx-background-color: #363648; -fx-text-fill: white; -fx-pref-width: 30; -fx-pref-height: 30; -fx-alignment: center; -fx-background-radius: 5;" text="2" />
                        <Label style="-fx-text-fill: #b0b0b0; -fx-font-size: 12px;" text="Not Answered" />
                    </HBox>
                </VBox>

                <Button onAction="#handleSubmitExam" style="-fx-background-color: #00C851; -fx-text-fill: white; -fx-padding: 15; -fx-background-radius: 10; -fx-font-weight: bold; -fx-font-size: 14px;" text="Submit Exam" />
            </VBox>

            <!-- Right: Question Area -->
            <VBox spacing="25" style="-fx-background-color: #1e1e2e;" HBox.hgrow="ALWAYS">
                <padding>
                    <Insets bottom="40" left="40" right="40" top="40" />
                </padding>

                <!-- Question Card -->
                <VBox spacing="20" style="-fx-background-color: #2b2b3c; -fx-background-radius: 15; -fx-padding: 30;" VBox.vgrow="ALWAYS">

                    <!-- Question Header -->
                    <HBox alignment="CENTER_LEFT" spacing="15">
                        <Label fx:id="questionNumberLabel" style="-fx-text-fill: #6c63ff; -fx-font-size: 18px; -fx-font-weight: bold;" text="Question 1" />
                        <Label fx:id="questionSubjectLabel" style="-fx-background-color: rgba(108,99,255,0.2); -fx-text-fill: #6c63ff; -fx-padding: 5 15; -fx-background-radius: 15; -fx-font-size: 12px; -fx-font-weight: bold;" text="Subject" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Label fx:id="questionDifficultyLabel" style="-fx-text-fill: white; -fx-font-size: 13px; -fx-font-weight: bold;" text="Easy" />
                    </HBox>

                    <Separator style="-fx-background-color: #363648;" />

                    <!-- Question Text -->
                    <Label fx:id="questionTextLabel" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-wrap-text: true;" text="Question text will appear here..." wrapText="true" />

                    <!-- Options -->
                    <VBox fx:id="optionsBox" spacing="15" style="-fx-padding: 20 0 0 0;" />

                    <!-- Spacer -->
                    <Region VBox.vgrow="ALWAYS" />

                    <!-- Navigation Buttons -->
                    <HBox alignment="CENTER" spacing="15">
                        <Button fx:id="prevButton" onAction="#handlePrevious" style="-fx-background-color: #666666; -fx-text-fill: white; -fx-padding: 12 30; -fx-background-radius: 8; -fx-font-weight: bold;" text="← Previous" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Button fx:id="nextButton" onAction="#handleNext" style="-fx-background-color: #6c63ff; -fx-text-fill: white; -fx-padding: 12 30; -fx-background-radius: 8; -fx-font-weight: bold;" text="Next →" />
                    </HBox>

                </VBox>
            </VBox>

        </HBox>
    </center>

</BorderPane>
