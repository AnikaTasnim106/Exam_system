            <Button fx:id="viewResultsBtn" onAction="#handleViewResults" prefWidth="230" style="-fx-background-color: transparent; -fx-text-fill: #a0a0a0; -fx-font-size: 15px; -fx-alignment: center-left; -fx-padding: 15 20; -fx-background-radius: 12;" text="ðŸ“Š View Results" />

