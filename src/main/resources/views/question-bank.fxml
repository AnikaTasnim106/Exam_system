<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane style="-fx-background-color: #1e1e2e;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.buet.edutrack.controllers.QuestionBankController">

    <!-- Top Bar -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: #0f3460;">
            <padding>
                <Insets bottom="20" left="30" right="30" top="20" />
            </padding>
            <Button onAction="#handleBack" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-cursor: hand;" text="â† Back" />
            <Label style="-fx-font-size: 24px; -fx-text-fill: white; -fx-font-weight: bold;" text="Question Bank" textFill="WHITE" />
            <Region HBox.hgrow="ALWAYS" />
            <Button onAction="#handleAddQuestion" style="-fx-background-color: #6c63ff; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20; -fx-background-radius: 8; -fx-font-weight: bold; -fx-cursor: hand;" text="+ Add New Question" />
        </HBox>
    </top>

    <center>
        <VBox spacing="20" style="-fx-background-color: #1e1e2e;">
            <padding>
                <Insets bottom="30" left="40" right="40" top="30" />
            </padding>

            <!-- Filter Bar -->
            <HBox alignment="CENTER_LEFT" spacing="15">
                <Label style="-fx-text-fill: white; -fx-font-size: 14px;" text="Filter by Subject:" />
                <ComboBox fx:id="subjectFilterCombo" prefWidth="200" promptText="All Subjects" style="-fx-background-color: #8e4ddc; -fx-text-fill: white;" />
                <Button onAction="#handleShowAll" style="-fx-background-color: #2b2b3c; -fx-text-fill: white; -fx-padding: 8 15; -fx-background-radius: 5;" text="Show All" />

                <Region HBox.hgrow="ALWAYS" />

                <Label fx:id="questionCountLabel" style="-fx-text-fill: #6c63ff; -fx-font-size: 14px; -fx-font-weight: bold;" text="Total Questions: 0" />
            </HBox>

            <!-- Questions Table -->
            <TableView fx:id="questionsTable" style="-fx-background-color: #8e4ddc; -fx-control-inner-background: #8e4ddc;" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="subjectColumn" prefWidth="120" text="Subject" />
                    <TableColumn fx:id="questionColumn" prefWidth="350" text="Question" />
                    <TableColumn fx:id="difficultyColumn" prefWidth="100" text="Difficulty" />
                    <TableColumn fx:id="correctAnswerColumn" prefWidth="80" text="Answer" />
                    <TableColumn fx:id="actionsColumn" prefWidth="150" text="Actions" />
                </columns>
            </TableView>

            <!-- Empty State Message -->
            <VBox fx:id="emptyStateBox" alignment="CENTER" managed="false" spacing="15" style="-fx-background-color: #2b2b3c; -fx-background-radius: 10;" visible="false" VBox.vgrow="ALWAYS">
                <padding>
                    <Insets bottom="100" top="100" />
                </padding>
                <Label style="-fx-font-size: 80px;" text="ðŸ“š" />
                <Label style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;" text="No Questions Yet" />
                <Label style="-fx-text-fill: #888; -fx-font-size: 14px;" text="Start building your question bank by adding your first question!" />
                <Button onAction="#handleAddQuestion" style="-fx-background-color: #6c63ff; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 12 25; -fx-background-radius: 8; -fx-font-weight: bold; -fx-cursor: hand; -fx-margin-top: 20;" text="Add First Question">
                    <VBox.margin>
                        <Insets top="20" />
                    </VBox.margin>
                </Button>
            </VBox>

        </VBox>
    </center>

</BorderPane>
