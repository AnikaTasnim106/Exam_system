<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane style="-fx-background-color: #1e1e2e;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.buet.edutrack.controllers.LoginController">

   <center>
      <VBox alignment="CENTER" maxHeight="600" maxWidth="450" spacing="20">
         <padding>
            <Insets bottom="40" left="40" right="40" top="40" />
         </padding>

         <!-- Login Container -->
         <VBox alignment="CENTER" spacing="25" style="-fx-border-color: bad4e7; -fx-border-width: 5;" styleClass="login-container">
            <padding>
               <Insets bottom="40" left="50" right="50" top="40" />
            </padding>

            <!-- Title -->
            <Label style="-fx-text-fill: efff94; -fx-font-weight: bold; -fx-font-size: 24; -fx-font-family: sans-serif;" styleClass="title-label" text="EduTrack" textFill="#efff94" />
            <Label style="-fx-text-fill: white; -fx-font-size: 12;" styleClass="subtitle-label" text="Welcome back! Please login to your account" />

            <!-- Form Fields -->
            <VBox prefWidth="350" spacing="15">

               <!-- Username -->
               <VBox spacing="8">
                  <Label styleClass="label" text="Username:" textFill="#fffbfb">
                     <font>
                        <Font size="15.0" />
                     </font></Label>
                  <TextField fx:id="usernameField" promptText="Enter your username" styleClass="text-field" />
               </VBox>

               <!-- Password -->
               <VBox spacing="8">
                  <Label styleClass="label" text="Password:" textFill="WHITE">
                     <font>
                        <Font size="15.0" />
                     </font></Label>
                  <PasswordField fx:id="passwordField" promptText="Enter your password" styleClass="password-field" />
               </VBox>

               <!-- Role Selection -->
               <VBox spacing="8">
                  <Label styleClass="label" text="Login as:" textFill="WHITE">
                     <font>
                        <Font size="15.0" />
                     </font></Label>
                  <ComboBox fx:id="roleComboBox" prefWidth="350" promptText="Select your role" styleClass="combo-box" />
               </VBox>

            </VBox>
            <!-- Error Label -->
            <Label fx:id="errorLabel" visible="false" wrapText="true" maxWidth="350" alignment="CENTER"
                   style="-fx-text-fill: #ff6b6b; -fx-font-size: 13px; -fx-font-weight: bold;"/>

            <!-- Login Button -->
            <Button fx:id="loginButton" onAction="#handleLogin" prefWidth="200" style="-fx-background-color: bad4e7;" styleClass="button" text="LOGIN" />

            <!-- Sign Up Link -->
            <HBox alignment="CENTER" spacing="5">
               <Label style="-fx-text-fill: #b0b0b0; -fx-font-size: 13px;" text="Don't have an account?" />
               <Label onMouseClicked="#handleGoToSignup" style="-fx-text-fill: #6c63ff; -fx-font-size: 13px; -fx-font-weight: bold; -fx-cursor: hand; -fx-underline: true;" text="Sign Up" />
            </HBox>

         </VBox>
      </VBox>
   </center>

</BorderPane>
